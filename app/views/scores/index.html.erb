<h1>Listing scores</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Beaconid</th>
      <th>Value</th>
      <th>From user</th>
      <th>Remark</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @scores.each do |score| %>
      <tr>
        <td><%= score.user_id %></td>
        <td><%= score.beaconid %></td>
        <td><%= score.value %></td>
        <td><%= score.from_user_id %></td>
        <td><%= score.remark %></td>
        <td><%= link_to 'Show', score %></td>
        <td><%= link_to 'Edit', edit_score_path(score) %></td>
        <td><%= link_to 'Destroy', score, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

