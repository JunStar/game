<%= form_for [:admin, @question_answer], html: {class: "form-horizontal", style: "margin-bottom:0px"} do |f| %>
    <legend>
      <%= action_name.in?(['new', 'create']) ? "添加" : "编辑" %>问题
    </legend>

    <% unless @question_answer.errors.blank? %>
        <div class="control-group text-error">
          <div class="controls" style="margin-left:110px">
            <ul>
              <% @question_answer.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        </div>
    <% end %>
    <%= f.hidden_field :question_id %>
    <div class="control-group">
      <label class="control-label" style="width:100px">
        <strong>问题答案:</strong>
      </label>
      <div class="controls" style="margin:0 30px 0 110px">
        <%= f.text_area :answer, style: "width:400px" %>
      </div>
      <label class="control-label" style="width:100px">
        <strong>答案图片:</strong>
      </label>
      <div class="controls" style="margin:0 30px 0 110px">
        <%= f.text_area :answer_img, style: "width:400px" %>
      </div>
    </div>

    <div class="control-group">
      <label class="control-label" style="width:100px">
        <strong>问题答案分数:</strong>
      </label>
      <div class="controls" style="margin:0 30px 0 110px">
        <%= f.text_field :answer_score, style: "width:400", required: true %>
      </div>
    </div>


    <div class="control-group">
      <label class="control-label" style="width:100px">
        <strong>问题答案跳转:</strong>
      </label>
      <div class="controls" style="margin:0 30px 0 110px">
        <%= f.text_field :answer_jump, style: "width:400", required: true %>
      </div>
    </div>


    <div class="form-actions" style="margin-bottom:0px;margin-left:-28px">
      <button type="submit" class="btn btn-primary">提交</button>
    </div>
<% end %>
