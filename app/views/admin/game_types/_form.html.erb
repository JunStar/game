<%= form_for [:admin, @game_type] do |f| %>

    <div class="control-group">
      <label class="control-label">名称</label>
      <div class="controls">
        <%= f.text_field :game_type, required: true %>
      </div>
    </div>

    <div class="control-group">
      <label class="control-label">图标</label>
      <div class="controls">
        <%= f.text_field :type_image, required: true, style: "width:500px" %>
      </div>
    </div>

    <div class="control-group">
      <label class="control-label"></label>
      <div class="controls">
        <%= f.submit %>
      </div>
    </div>

<% end %>