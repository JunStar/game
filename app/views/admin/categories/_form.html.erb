<style>ul.token-input-list-facebook {position: relative; top: -29px;}</style>
<%= form_for [:admin,@category], html: {class: 'form-horizontal' } do |f| %> 
  <div class="control-group">
    <label class="control-label">名称</label>
    <div class="controls">
      <%= f.text_field :name, required: true %>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label">Meta</label>
    <div class="controls">
      <%= f.text_area :meta, style:"width:800px;height:100px" %>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label">Javascript</label>
    <div class="controls">
      <%= f.text_area :js, style:"width:800px;height:100px" %>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label">WeiXinJavascript</label>
    <div class="controls">
      <%= f.text_area :wx_js, style:"width:800px;height:100px" %>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label">Css</label>
    <div class="controls">
      <%= f.text_area :css, style:"width:800px;height:100px" %>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label">Html</label>
    <div class="controls">
      <%= f.text_area :html, style:"width:800px;height:100px" %>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label">ReturnJavascript</label>
    <div class="controls">
      <%= f.text_area :re_js, style:"width:800px;height:100px" %>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label">ReturnCss</label>
    <div class="controls">
      <%= f.text_area :re_css, style:"width:800px;height:100px" %>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label">ReturnHtml</label>
    <div class="controls">
      <%= f.text_area :re_html, style:"width:800px;height:100px" %>
    </div>
  </div>

   <div class="form-group">
      <%= link_to  "/admin/categories/#{@category.id}/code_blocks/new", class: 'btn btn-primary btn-sm', id: 'a_obj' do %>
        <span class="glyphicon glyphicon-plus"></span>新建code block
      <% end %>

      <table class="table">
        <tr>
          <th>ID</th>
          <th>name</th>
          <th>created_at</th>
          <th>operate</th>
        </tr>
        <% @category.code_blocks.order('created_at desc').each do |t|%>
        <tr>
          <td><%= t.id %></td>
          <td><%= t.name %></td>
          <td><%= t.created_at.to_local %></td>

          <td> <%= link_to [:edit,:admin,@category,t], class: :e_obj do %><span class="glyphicon glyphicon-plus"></span>编辑<% end %> |<%= link_to '删除', [:admin, @category, t], :title=>"删除",:method=>"delete", :confirm=>"确定删除吗?" %></td>
        </tr>
        <%end%>
      </table>
   </div>




    <div class="control-group">
      <label class="control-label">游戏类型</label>
      <div class="controls">
        <%= f.select :game_type_id, @game_types, style:"width:800px;height:100px" %>
      </div>
    </div>

    <div class="control-group">
      <label class="control-label">是否多题目类型</label>
      <div class="controls">
        <%= f.select :material_type, [["是", 1], ["不是", 0]],style:"width:800px;height:100px" %>
      </div>
    </div>

    
    <div class="control-group">
      <label class="control-label">不用微信模板js</label>
      <div class="controls">
        <%= f.check_box :use_wxjs %>
      </div>
    </div>

    <div class="control-group">
      <label class="control-label">隐藏朋友圈</label>
      <div class="controls">
        <%= f.check_box :hide_pyq %>
      </div>
    </div>

  <div class="form-actions" style="margin-bottom:0px">
    <%= f.submit '提交', class: 'btn btn-primary', id: "tixing" %>
  </div>
<% end %>
