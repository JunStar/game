<% unless @bgames.blank? %>

<table class="table">

  <tr>
    <th>ID</th>
    <th>ibeacon</th>
    <th>game</th>
    <th>remark</th>
    <th>State</th>
    <th>Operate</th>
  </tr>

  <% @bgames.each do |bgame| %>
  <tr>
    <td><%= bgame.id %></td>
    <td><%= bgame.beacon_name %></td>
    <td><%= bgame.game_name %></td>
    <td><%= bgame.remark %></td>
    <td><%= bgame.state %></td>
    <td><%= link_to "Edit", edit_admin_bgame_path(bgame) %> | <%= link_to "delete", admin_bgame_path(bgame), :method => :delete, confirm: "确认删除?" %></td>
  </tr>
  <% end %>
</table>
<% end %>
