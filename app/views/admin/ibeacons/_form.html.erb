<%= form_for [:admin, @ibeacon] do |f| %>

    <div class="control-group">
      <label class="control-label">name</label>
      <div class="controls">
        <%= f.text_field :name, required: true, style: "width:500px" %>
      </div>
    </div>

    <div class="control-group">
      <label class="control-label">remark</label>
      <div class="controls">
        <%= f.text_field :remark, required: true, style: "width:500px" %>
      </div>
    </div>

    <div class="control-group">
      <label class="control-label">User</label>
      <div class="controls">
        <%= f.text_field :user_id, required: true %>
      </div>
    </div>


    <div class="control-group">
      <label class="control-label">url</label>
      <div class="controls">
        <%= f.text_field :url, required: true %>
      </div>
    </div>

    <div class="control-group">
      <label class="control-label">provider</label>
      <div class="controls">
        <%= f.text_field :provider, required: true %>
      </div>
    </div>
     

    <div class="control-group">
      <label class="control-label">uid</label>
      <div class="controls">
        <%= f.text_field :uid %>
      </div>
    </div>


    <div class="control-group">
      <label class="control-label">State</label>
      <div class="controls">
        <%= f.select :state, Admin::IbeaconsController::State, required: true %>
      </div>
    </div>

    <div class="control-group">
      <label class="control-label"></label>
      <div class="controls">
        <%= f.submit %>
      </div>
    </div>

<% end %>
