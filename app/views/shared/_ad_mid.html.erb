<div style=" background:#fff;  " align="center" id="bai">
  <div style="display: inline;float: left;">
    <% @ads = Ad.where(:on => true).where( :t=> 0 ) %>
    <% @ads.each do |ad| %>
       <li style="float:left; margin-left:2px; width:31%; ">
         <a onclick="click_ad(<%= ad.id %>);" href="<%= ad.click %>" > <img style="width:100%; max-height:60px;" src="<%= ad.img %>" /> </a>
       </li>
    <% end %>
  </div>
</div>
